<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/countryPrefix"
        android:text="India"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#D1B9B9"
        android:weightSum="1">

        <com.hbb20.CountryCodePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ccp"
            app:ccpDialog_searchEditTextTint="@color/black"
            app:ccpDialog_textColor="@color/black"
            app:ccpDialog_showNameCode="false"
            app:ccpDialog_backgroundColor="@color/white"
            android:layout_gravity="center"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false"/>

        <EditText
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight=".9"
            android:hint="Enter your number"

            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:maxLength="10" />

    </LinearLayout>

    <TextView
        android:id="@+id/msdtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msgdsc"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:visibility="gone"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="ENTER TEXT"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">



    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        android:layout_weight=".6"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:src="@drawable/ccp_ic_arrow_drop_down"
            android:id="@+id/scrollDown"/>
    </LinearLayout>



</LinearLayout>